<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/player_name_value"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/midmedium"
        android:layout_marginEnd="@dimen/tiny"
        android:layout_marginStart="@dimen/tiny"
        android:layout_marginTop="@dimen/medium"
        tools:text="Toronto Raptors"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/player_position_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
            android:id="@+id/player_position_value"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/midmedium"
            android:layout_marginEnd="@dimen/xhugelarge"
            android:layout_marginTop="@dimen/medium"
            tools:text="70"
            android:gravity="center"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/player_number_value"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/tiny"></TextView>

    <TextView
            android:id="@+id/player_number_value"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/midmedium"
            android:layout_marginEnd="@dimen/tiny"
            android:layout_marginTop="@dimen/medium"
            tools:text="10"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/tiny"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>